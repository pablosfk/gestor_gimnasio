{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Virtual Environment",
            "type": "shell",
            "command": "& ./.venv/Scripts/Activate.ps1",
            "problemMatcher": [],
            "options": {
                "shell": {
                    "executable": "powershell.exe",
                    "args": [
                        "-NoProfile",
                        "-ExecutionPolicy",
                        "Bypass"
                    ]
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}